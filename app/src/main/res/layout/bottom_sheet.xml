<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <SeekBar
        android:id="@+id/textSize"
        android:thumb="@drawable/custom_seekbar"
        android:progressDrawable="@drawable/seekbar_progress"
        android:splitTrack="false"
        android:max="120"
        android:min="22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/textSize"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEXT SIZE"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <SeekBar
        android:id="@+id/blindSpotSize"
        android:thumb="@drawable/custom_seekbaar2"
        android:progressDrawable="@drawable/seekbar_prog2"
        android:splitTrack="false"
        android:max="2000"
        android:min="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLIND SPOT SIZE"
        android:layout_marginBottom="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

</LinearLayout>
