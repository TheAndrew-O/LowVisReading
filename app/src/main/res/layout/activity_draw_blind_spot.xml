<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".draw_blindSpot"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8">
            <include layout="@layout/activity_draw_view"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:gravity="center"
            android:background="#FFCCCCCC"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/save_blind_spot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rc_green"
                android:src="@drawable/ic_baseline_save_alt_24"
                android:layout_marginRight="25dp"/>
            <ImageButton
                android:id="@+id/undo_blind_spot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_undo_24"
                android:background="@drawable/rc_blue"
                android:layout_marginHorizontal="25dp"/>
            <ImageButton
                android:id="@+id/exit_draw"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_cancel_24"
                android:background="@drawable/round_corners"
                android:layout_marginLeft="25dp"/>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>