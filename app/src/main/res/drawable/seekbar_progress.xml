<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/seekbar_bg"
        android:height="16dp"
        android:bottom="7dp"
        android:top="7dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item
        android:id="@+id/seekbar_prog"
        android:height="16dp"
        android:bottom="7dp"
        android:top="7dp">
        <clip
            android:clipOrientation="horizontal"
            android:gravity="left">
            <shape android:shape="rectangle">
                <gradient
                    android:angle="90"
                    android:startColor="@color/AddButtonBlue"
                    android:endColor="@color/RoyalBlue"
                    android:type="linear"/>
                <corners android:radius="8dp"/>
            </shape>
        </clip>
    </item>
</layer-list>